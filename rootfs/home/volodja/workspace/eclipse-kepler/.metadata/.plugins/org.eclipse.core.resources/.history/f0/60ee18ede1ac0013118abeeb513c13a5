#include <iostream>
#include <string>
#include <typeinfo>


using namespace std;


void func(const string &s) {
    cout << s << endl;
}


int main() {
//    cout << string(typeid(string()).name()) << endl;

    cout << typeid(

            ([&]() -> string const {
                const string result = "qwert";
                cout << "lambda: " << result << endl;
                return result;
            })
    ).name() << endl;

//    cout << "return: " << l() << endl;
//    cout << "lambda type: " << typeid(l).name() << endl;

    return 0;
}
