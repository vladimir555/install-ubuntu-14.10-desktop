#include "property_tree_json_config.h"


namespace config {
namespace implementation {


JSONConfig::JSONConfig(const string &file_name)
:
    file_name(file_name)
{}


JSONConfig::~JSONConfig() {
}


TCPAddress JSONConfig::getServerAddress() const {
    return TCPAddress(getValue<string>("server.host"), getValue<int16_t>("server.port"));
}


TCPAddress JSONConfig::getDBAddress() const {
    return TCPAddress(getValue<string>("server.host"), getValue<int16_t>("server.port"));
}


TCPAddress JSONConfig::getClientAddress() const {
    return TCPAddress(getValue<string>("server.host"), getValue<int16_t>("server.port"));
}


} /* namespace implementation */
} /* namespace config */
